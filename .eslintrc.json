{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:jsdoc/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-unused-expressions": 0,
        "no-irregular-whitespace": 2,
        "no-unexpected-multiline": 2,
        "no-trailing-spaces": 2,
        "semi": [
            "error"
        ],
        "quotes": [
            "single",
            "error"
        ]
    }
}